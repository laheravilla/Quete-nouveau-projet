{% extends 'base.html.twig' %}

{% block title %}{{ slug }}{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

    <article>
        <h1>Title: {{ article.title }}</h1>
        <h2>Slug: {{ article.slug }}</h2>
        <h2>Category: {{ article.category.name }}</h2>
        <p>{{ article.content }}</p>
    </article>

    <strong>Tags :</strong>
    <ul>
        {% for tag in article.tags %}
            <li>{{ tag.name }} </li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>
    {% if is_granted('ROLE_AUTHOR') %}
        <a class="btn btn-outline-primary" href="{{ path('article_edit', { 'id': article.id} ) }}">Ã‰diter</a>
    {%endif%}

    <a class="btn btn-outline-primary" href="{{ path('app_index') }}">
        Back to Homepage.
    </a>

{% endblock %}