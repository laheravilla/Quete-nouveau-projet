{% extends 'base.html.twig' %}

{% block title %}All articles{% endblock %}

{% block body %}
    <h1 class="mt-5">All articles from article's table:</h1>
    <table class="table mt-5">
        <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Slug</th>
            <th>Author</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Content</th>
            <th>More...</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.slug }}</td>
                <td>{{ article.author }}</td>
                <td>{{ article.category.name }}</td>
                <td>
                        {% for tag in article.tags %}
                            {{ tag.name }}
                        {% else %}
                            No tags...
                        {% endfor %}
                </td>
                <td>{{ article.content }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('blog_show', { 'slug': article.slug }) }}">Read more... </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Any article found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_index') }}">Back to Homepage</a>
{% endblock %}
