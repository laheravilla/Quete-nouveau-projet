<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://bootswatch.com/4/materia/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% block stylesheets %} {{ encore_entry_link_tags('app') }} {% endblock %}
    <title>{% block title %}Welcome!{% endblock %}</title>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('app_index') }}">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('blog_index') }}">Articles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('category_index') }}">Categories Administration</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('tag_index') }}">Tags Administration</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('article_index') }}">Articles Administration</a>
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>
<main class="container">
    {% block body %}{% endblock %}
</main>
<script src="{{ asset('build/app.js') }}"></script>
{% block javascripts %} {{ encore_entry_script_tags('app') }} {% endblock %}
</body>
</html>
